<!-- ADD MODAL -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addModalLabel">Add Space Mission</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="editRow" name="editRow">
            <input type="hidden" id="edit-id" name="editId">
            <div class="form-group">
                  <label for="edit-name" class="col-form-label">Destination:</label>
                  <input type="text" class="form-control" id="edit-name" name="editName">
            </div>
            <div class="form-group">
                  <label for="edit-name" class="col-form-label">Spacecraft:</label>
                  <input type="text" class="form-control" id="edit-name" name="editName">
            </div>
           <div class="form-group">
             <label for="edit-date" class="col-form-label">Launch Date:</label>
             <input type="date" class="form-control" id="edit-date" name="editDate">
           </div>
           <div class="form-group">
             <label for="edit-date" class="col-form-label">End Date:</label>
             <input type="date" class="form-control" id="edit-date" name="editDate">
           </div>
          <div class="form-group">
            <label for="edit-reps" class="col-form-label">County</label>
            <input type="number" class="form-control" id="edit-reps" name="editReps">
          </div>
          <div class="form-group">
              <fieldset class="form-group align-items-center">
                  <div class="form-row align-items-center">
                      <legend class="col-form-label">Success:</legend>
                        <div class="col-sm-9">
                          <div class="form-check form-check-inline">
                            <input class="form-check-input form-check" type="radio" name="editLbs" id="editLbs" value="1">
                            <label class="form-check-label form-check" for="edit-lbs">Yes</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input form-check" type="radio" name="editLbs" id="editLbs" value="0">
                            <label class="form-check-label form-check" for="edit-lbs">No</label>
                          </div>
                      </div>
                    </div>
              </fieldset>
            </div>
        </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-secondary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>

